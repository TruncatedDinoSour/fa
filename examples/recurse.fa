include 'std/std.fa'

fun recurse [ int ] int eo
    "Hello" ro %puts

    copy   -- (arg; arg)
    1 sub  -- (arg - 1; arg)
    0      -- (0; arg - 1; arg)
    eql    -- (?(0 == arg - 1); arg)

    if     -- return arg
        ret
    else   -- return hello(arg - 1)
        1 swap sub #recurse
    end
end

fun main [ str str int ] eo
    3 #recurse

    copy

    1 eql if
        "Recursion passed, nice" ro %puts

        pop
        %EXIT_SUCCESS %exit
    else
        "Recursion is being weird..." ro %error
        %exit
    end
end

#main
